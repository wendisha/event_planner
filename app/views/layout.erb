<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Event Planner</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="shortcut icon" type="image/x-icon" href="./favicon.ico">

  </head>
  <body>
    <div class="wrapper">
      <div><% if flash.has?(:error_signup) %>
        <div style="background-color:#c2f0f0;" align="middle" >
        <%= flash[:error_signup] %>
      <% end %></div>
      
      <div><% if flash.has?(:error_login) %>
        <div style="background-color:#c2f0f0;" align="middle" >
        <%= flash[:error_login] %>
      <% end %></div>
      
      <div><% if flash.has?(:event_create_success) %>
        <div style="background-color:#c2f0f0;" align="middle" >
        <%= flash[:event_create_success] %>
      <% end %></div>
      
      <div><% if flash.has?(:error_event_create) %>
        <div style="background-color:#c2f0f0;" align="middle" >
        <%= flash[:error_event_create] %>
      <% end %></div>
      
      <div><% if flash.has?(:event_edit_success) %>
        <div style="background-color:#c2f0f0;" align="middle" >
        <%= flash[:event_edit_success] %>
      <% end %></div>
      
      <div><% if flash.has?(:error_one_event_edit) %>
        <div style="background-color:#c2f0f0;" align="middle" >
        <%= flash[:error_one_event_edit] %>
      <% end %></div>
      
      <div><% if flash.has?(:error_two_event_edit) %>
        <div style="background-color:#c2f0f0;" align="middle" >
        <%= flash[:error_two_event_edit] %>
      <% end %></div>
      <br>  
      <%= yield %>
      
      <footer class="branding">
        <small>&copy; 2019 <strong>Event Planner</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
